<?xml version="1.0"?>
<config>
    <modules>
        <SW_GridExample>
            <version>0.1.0</version>
        </SW_GridExample>
    </modules>
    <global>
        <events>
            <!-- Event to attach observer to -->
            <core_block_abstract_to_html_before>
                <observers>
                    <gridexample>
                        <type>singleton</type>
                        <!-- Observer location (e.g. SW/GridExample/Model) -->
                        <class>SW_GridExample_Model_Observer</class>
                        <!-- Function to call -->
                        <method>addActions</method>
                    </gridexample>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </global>
</config>